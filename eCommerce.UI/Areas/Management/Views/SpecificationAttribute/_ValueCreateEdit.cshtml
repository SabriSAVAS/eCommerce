@model eCommerce.Dto.SpecificationValue.SpecificationAttributeValueViewModel
<div class="modal-body">
    @Html.ValidationSummary()
    @Html.AntiForgeryToken()
    @Html.HiddenFor(x=>x.ValueId, new { id="valueId" })
    @Html.HiddenFor(x => x.SpecificationAttributeId,new { id= "valueSpecificationAttributeId" })
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">

                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-3">
                            <div class="pull-right">
                                <label class="control-label">Name :</label>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <div>
                                @Html.TextBoxFor(x => x.Name, new { @class = "form-control",id="valueName" })
                                @Html.ValidationMessageFor(x => x.Name)
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-3">
                            <div class="pull-right">
                                <label class="control-label">Display order :</label>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <div>
                                @Html.TextBoxFor(x => x.OrderNo, new { type = "number", value = "0", @class = "form-control",id= "valueOrderNo" })
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>

</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    <button type="submit" class="btn btn-primary">Save changes</button>
</div>
