@model List<eCommerce.Dto.Picture.PictureListViewModel>
<div class="panel-group">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <b>Product Pictures</b>
        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table  table-condensed">
                    <thead>
                        <tr>
                            <th>Picture</th>

                            <th>Display order</th>

                            <th>Alt</th>

                            <th>Title</th>
                            <th><i class="fa fa-fw fa-cog"></i></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count > 0)
                    {
                        foreach (var item in Model)
                        {
                                <tr id="tr_@item.Id">
                                    <td>
                                        <img src="@item.SmallPath" style="width:200px; height:100px" class="img-responsive img-rounded"
                                             title="@item.Title" />
                                    </td>
                                    <td>
                                        @item.OrderNo
                                    </td>
                                    <td>
                                        @item.Alt
                                    </td>

                                    <td>
                                        @item.Title
                                    </td>

                                    <td>
                                        <a href="javascript:ProductPictureDelete(@item.Id)" class="btn btn-danger"><em class="fa fa-trash"></em></a>
                                    </td>

                                </tr>
                        }

                    }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
