@model eCommerce.Dto.ReletedProduct.RelatedProductSearchViewModel

<div class="panel-group">
    <div class="panel panel-success">
        <div class="panel-body">
            @using (Ajax.BeginForm("RelatedProductPopup", "Product", FormMethod.Post, new AjaxOptions { OnSuccess = "OnSuccessAjax" }))
            {
                <div class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-3">
                            <div class="pull-right">
                                <label>Product Name</label>
                            </div>
                        </div>
                        <div class="col-md-9">
                            @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12">
                            <div class="pull-right">
                                <input type="submit" class="btn btn-primary" value="Search" />
                            </div>
                        </div>
                    </div>

                </div>

            }
        </div>
    </div>
</div>

<div id="relatedList">
    @Html.Partial("_RelatedProductList", Model)
</div>



<script>
    function OnSuccessAjax(data) {

        $("#relatedList").html(data);
    }
</script>